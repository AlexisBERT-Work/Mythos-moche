generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  EXPERT
  ADMIN
}

model User {
  id         String   @id @default(uuid()) @db.Uuid
  email      String   @unique
  username   String  
  password   String
  role       Role     @default(USER)
  reputation Int      @default(0)
  createdAt  DateTime @default(now())
}