generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
}

enum Status {
  PENDING
  VALIDATED
  REJECTED
}

model Creature {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  name        String  @unique
  origin      String
  createdAt   DateTime @default(now())
}

model Temoignage {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  creatureId    String
  description   String
  status        Status   @default(PENDING)
  validatedBy   String?
  validationAt  DateTime?
  createdAt     DateTime @default(now())
}